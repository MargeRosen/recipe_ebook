<%= form_for(@recipe) do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description, "Meal Type" %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :preptime, "Prep Time" %><br />
    <%= f.text_field :preptime %>
  </p>
  <p>
    <%= f.label :servings %><br />
    <%= f.text_field :servings %>
  </p>
  <%= f.submit %>
  <%= f.error_messages %>
<% end %>
