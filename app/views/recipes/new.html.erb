<h2>New Recipe</h2>
<%= form_for(@recipe) do |f| %>
  <p>
    <%= f.label :title, "Recipe Title" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description, "Meal Type" %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :preptime, "Prep Time" %><br />
    <%= f.text_field :preptime %>
  </p>
  <p>
    <%= f.label :servings  %><br />
    <%= f.text_field :servings %>
  </p>
  <%= f.submit %>
<% end %>
