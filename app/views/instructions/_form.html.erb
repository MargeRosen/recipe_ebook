<%= form_for [@recipe, @instruction] do |f| %>
  <%= f.error_messages %>
    <p>
      <%= f.label :ingredient, "Ingredients with measurement" %><br>
      <%= f.text_area :ingredient %>
    </p>
    <p>
      <%= f.label :directions, "Directions with procedures" %><br>
      <%= f.text_area :directions %>
    </p>
  <%= f.submit %>
<% end %>
