<div id='instructions'>
  <h2><%= title(@instructions.title "Instructions")%></h2>
  <%= link_to "New Instruction", new_recipe_instruction_path(@recipe) %>
  <%= link_to "Edit Instruction ", [:edit, @recipe, @instructions] %>
  <%= link_to "Delete Instruction",
     [@recipe, @instruction],
     :method => :delete,
     data: { confirm: 'Are you sure you want to delete these instructions?' } %>
     <%# Removed :confirm ... due to DEPRECATION WARNING: :confirm option is deprecated and will be removed from Rails 4.1. Use 'data: { confirm: 'Text' }' instead. %>
  <%= @instructions.ingredient %>
  <%= @instructions.directions %>
</div>
